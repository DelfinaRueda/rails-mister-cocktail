<h1>Add new dose to <%=  @cocktail.name %></h1>
  <div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 ">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient  %>
        <%= f.input :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

