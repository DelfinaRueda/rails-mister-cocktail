<h1><%= @cocktail.name %></h1>

<ul>
  <% @doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %></li>
  <%= link_to 'Delete', dose_path(dose), method: :delete, class:"btn btn-outline-danger btn-sm" %>
<% end %>
</ul>
<%= link_to "Add a New Dose", new_cocktail_dose_path(@cocktail), class:"btn btn-success" %>


<hr>
<%= link_to 'Back', cocktails_path, class:"btn btn-primary"%>
<%= link_to 'Edit', edit_cocktail_path(@cocktail), class:"btn btn-primary" %>
<%= link_to 'Delete_all', cocktail_path(@cocktail), method: :delete, class:"btn btn-danger" %>

